@model Lab8.Models.Car

@{
    ViewData["Title"] = "Edit Car";
    var carModels = ViewBag.CarModels as IEnumerable<Lab8.Models.CarModel>;
}

<h2>Edit Car</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModelId" class="control-label">Car Model</label>
                <select asp-for="CarModelId" class="form-control">
                    <option value="">-- Select Car Model --</option>
                    @if (carModels != null)
                    {
                        @foreach (var cm in carModels)
                        {
                            <option value="@cm.Id">@cm.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="CarModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Image</label>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-2">
                        <img src="@Model.ImageUrl" alt="Current Image" style="width: 100px; height: 100px; object-fit: cover;" />
                    </div>
                }
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                <small class="text-muted">Leave empty to keep current image</small>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
