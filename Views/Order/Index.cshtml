@model IEnumerable<Lab8.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="row">
    <div class="col-md-12">
        <h2>Orders</h2>
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New Order</a>
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Order Date</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CustomerName</td>
                        <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.Total.ToString("N0") VND</td>
                        <td>
                            <span class="badge @(item.Status == "Completed" ? "bg-success" : item.Status == "Cancelled" ? "bg-danger" : "bg-warning")">
                                @item.Status
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" 
                               onclick="return confirm('Are you sure you want to delete this order?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
