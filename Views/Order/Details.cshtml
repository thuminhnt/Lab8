@model Lab8.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<div class="card">
    <div class="card-header">
        <h4>Order #@Model.Id</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Customer:</dt>
                    <dd class="col-sm-8">@Model.Customer?.Name</dd>

                    <dt class="col-sm-4">Phone:</dt>
                    <dd class="col-sm-8">@Model.Customer?.Phone</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Customer?.Email</dd>

                    <dt class="col-sm-4">Address:</dt>
                    <dd class="col-sm-8">@Model.Customer?.Address</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Order Date:</dt>
                    <dd class="col-sm-8">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Status == "Completed" ? "bg-success" : Model.Status == "Cancelled" ? "bg-danger" : "bg-warning")">
                            @Model.Status
                        </span>
                    </dd>

                    <dt class="col-sm-4">Total:</dt>
                    <dd class="col-sm-8"><strong>@Model.Total.ToString("N0") VND</strong></dd>
                </dl>
            </div>
        </div>

        <hr />

        <h5>Order Items</h5>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Image</th>
                    <th>Car</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                }
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@index</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Car?.ImageUrl))
                            {
                                <img src="@item.Car.ImageUrl" alt="@item.Car.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                        </td>
                        <td>@item.Car?.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("N0") VND</td>
                        <td>@((item.Price * item.Quantity).ToString("N0")) VND</td>
                    </tr>
                    index++;
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5" class="text-end"><strong>Total:</strong></td>
                    <td><strong>@Model.Total.ToString("N0") VND</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
